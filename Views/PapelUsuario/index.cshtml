@using GerenciadorUsuario.Models
@model IEnumerable<GerenciadorUsuario.Models.PapelUsuario>

@{
    ViewData["Title"] = "Papel Usuario";
}

<div class="flex justify-center mt-4">
  <div>
    <h1 class="text-2xl font-bold">Adicionar Papel Usuário</h1>
    <form>
      <div class="sm:col-span-4">
        <label for="username" class="block text-sm/6 font-medium text-gray-900">Nome</label>
        <div class="mt-2 flex items-center justify-center">
            <div class="flex items-center justify-center gap-4 rounded-md bg-white pl-3 w-[300px] h-[40px] outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600">
                <input type="text" name="papel" id="papelUsuario" class="block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6" placeholder="Papel Usuario...">
            </div> 
            <div>
              <button id="botao-salvar" onclick="cadastrarPapelUsuario('@Url.Action("CriarPapelUsuario", "PapelUsuario")')" type="button" class="w-[92px] h-[40px] rounded-md bg-[#2563EB] px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-blue-800 sm:ml-3 cursor-pointer">
                SALVAR
              </button>
              <button id="botao-voltar" type="button" onclick="location.href = '/Home'" class="w-[92px] h-[40px] rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-xs ring-1 ring-gray-300 ring-inset hover:bg-gray-50 cursor-pointer">
                VOLTAR
              </button>
            </div> 
        </div>                                            
      </div>
    </form>
    <div class="mt-4 max-h-[400px] overflow-auto border border-gray-300 rounded">
        <table class="min-w-full border-separate border-spacing-0">
            <thead class="bg-white sticky top-0 z-10">
                <tr>
                    <th scope="col" class="sticky top-0 z-10 hidden border-b border-t border-gray-300 bg-white/75 px-3 py-3.5 text-left text-sm font-semibold text-gray-900 backdrop-blur-sm backdrop-filter sm:table-cell">Papel Usuário</th>
                    <th scope="col" class="sticky top-0 z-10 hidden border-b border-t border-r border-gray-300 bg-white/75 px-3 py-3.5 text-left text-sm font-semibold text-gray-900 backdrop-blur-sm backdrop-filter sm:table-cell">Ações</th>
                </tr>
            </thead>
                @if (Model == null || Model.Any())
                {
                  @foreach (var papelUsuario in Model)
                  {
                    <tbody>
                        <tr>
                            <td id="papelUsuario-@papelUsuario.Id" class="px-3 py-4 text-sm max-w-[200px] break-words whitespace-normal border-b border-gray-200 text-gray-500">@papelUsuario.NomePapelUsuario</td>
                            <td id="acoes-@papelUsuario.Id" class="border-b border-r  border-gray-200 hidden px-3 py-4 text-sm whitespace-normal text-gray-500 lg:table-cell">
                                <button id="bt-remover-papel" class="cursor-pointer p-2 rounded text-red-600 transition" onclick="excluirPapel('@Url.Action("RemoverPapelUsuario", "PapelUsuario", new { idPapel =  @papelUsuario.Id })', @papelUsuario.Id)">
                                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                  </svg>
                                </button>                                
                            </td>
                        </tr>                   
                    </tbody>
                  }
                }      
        </table>
    </div>
  </div>
  <div id="alert-container" class="fixed top-4 right-4 z-50 w-full max-w-sm"></div>
</div>

<script src="~/Pages/PapelUsuario/index.js" defer></script>
